{% extends 'form-layout.html.twig' %}

{% block title %}Rate this user{% endblock %}

{% block img_section %}
	<div class="pic-layout">
		<img src="../../images/review.jpg" alt="review" class="img-layout">
	</div>{% endblock %}

{% form_theme myForm _self %}

{% block form_section %}
    <div class="container">
        <div class="space">
			<a href="{{ path('artworks_index') }}" class="subText">Home /</a>
			<a href="{{ path('artworks_review') }}" class="subText weight">Rate this user</a>
		</div>
        <h1>Rate this user</h1>
        <p class="space">Que rajouter de plus ?</p>
        {{ form_start(myForm) }}
             {{form_widget(myForm)}}
            <button type="submit" class="btn4 align">Submit</button>
        {{ form_end(myForm) }}
    </div>
{% endblock %}

{% block form_row %}
    <div class="container">
        <div class="form-group row">
            <div class="col-4">
                {{form_label(form)}}
            </div>
            <div class="col-8 space">
                {{form_widget(form)}}
                {{form_errors(form)}}
            </div>
        </div>
    </div>
{% endblock %}
