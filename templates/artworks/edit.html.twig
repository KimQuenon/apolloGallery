{% extends "base.html.twig" %}


{% block title %}Mode Edition{% endblock %}

{% form_theme myForm _self %}

{% block body %}

    <div class="container mt-4">
        <h1>Modification de l'annonce : {{artwork.title}}</strong></h1>
        {{form_start(myForm)}}
            {{form_widget(myForm)}}
            <button type="submit" class="btn btn-warning mt-3">Modifier</button>
        {{form_end(myForm)}}
    </div>

{% endblock %}

{% block form_row %}
    <div class="form-group mt-2">
        <div class="row">
            <div class="col-6">
                {{form_label(form)}}
            </div>
            <div class="col-6">
               {% if form.vars.name == 'endDate' or form.vars.name =='priceInit' %}
                    {{form_widget(form, { 'attr': {'readonly': 'readonly' } })}}
                {% else %}
                    {{form_widget(form)}}
                {% endif %}
                {{form_errors(form)}}
            </div>
        </div>
    </div>
{% endblock %}