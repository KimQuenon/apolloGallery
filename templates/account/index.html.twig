{% extends 'form-layout.html.twig' %}

{% block title %}Login
{% endblock %}

{% block img_section %}
	<img src="../../images/login.jpg" alt="login" class="img-layout">
{% endblock %}

{% block form_section %}

	<div class="container">
		<div class="space">
			<a href="{{ path('homepage') }}" class="subText">Home /</a>
			<a href="{{ path('account_login') }}" class="subText weight">Login</a>
		</div>
		<div>
			<h1>welcome back !</h1>
			<p class="weight space">No account yet ?
				<a href="{{path('account_register')}}" class="text-decoration-underline">Sign up right here !</a>
			</p>
			<p class="space">Welcome to Apollo Gallery, et blablablablabla et blablabla et aussi un autre blabla pour que Ã§a fasse deux lignes.</p>
			{% if hasError %}
				<div class="alert alert-danger">
					Une erreur est survenue, le nom d'utilisateur ou le mot de passe est invalide.
				</div>
			{% endif %}
			{% if loginError %}
				<div class="alert alert-danger">
					{{loginError}}
				</div>
			{% endif %}
			<form action="{{path('account_login')}}" method="POST">
				<div class="form-group space">
					<label for="email" class="weight">E-mail</label>
					<input type="text" name="_username" id="email" class="form-control" placeholder="Email address..." required value="{{username}}">
				</div>
				<div class="form-group space">
					<label for="password" class="weight">Mot de passe:</label>
					<input type="password" name="_password" id="password" class="form-control" placeholder="Password..." required>
				</div>
				<div class="form-group space">
					<button type="submit" class="btn4">Login</button>
				</div>
			</form>
            <div>
                <p class="subText center">Follow us here too :</p>
                <div class="social_media_all">
                    {% include "partials/_social-media.html.twig" %}
                </div>
            </div>
		</div>
	</div>
{% endblock %}
