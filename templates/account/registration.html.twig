{% extends 'form-layout.html.twig' %}

{% block title %}Register
{% endblock %}

{% block img_section %}
	<img src="../../images/register.jpg" alt="register" class="img-layout" id="registration_img">
{% endblock %}

{% form_theme myForm _self %}

{% block form_section %}
    <div class="container">
    	<div class="space">
			<a href="{{ path('homepage') }}" class="subText">Home /</a>
			<a href="{{ path('account_register') }}" class="subText weight">Register</a>
		</div>
        <h1>a new face ?</h1>
        <p class="space">Welcome to Apollo Gallery! Join our community of art enthusiasts and experts. Dive into a world where every bid tells a unique story. <a href="{{path('account_login')}}" class="text-decoration-underline weight">Already one of us ?</a></p>
        {{form_start(myForm)}}
            {{form_widget(myForm)}}
            <button type="submit" class="btn4 align">Sign up</button>
        {{form_end(myForm)}}
    </div>
{% endblock %}

{% block form_row %}
    <div class="container">
        <div class="form-group row">
            <div class="col-4">
                {{form_label(form)}}
            </div>
            <div class="col-8 space">
                {{form_widget(form)}}
                {{form_errors(form)}}
            </div>
        </div>
    </div>
{% endblock %}