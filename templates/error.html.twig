<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		<title>Apollo Gallery -
			{% block title %}Welcome!
			{% endblock %}
		</title>
		<link rel="icon" sizes="16x16" href="images/logo_apollo.svg">
        <link rel="icon" sizes="32x32" href="images/logo_apollo.svg">
		<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
		<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.0/css/all.min.css" integrity="sha512-xh6O/CkQoPOWDdYTDqeRdPCVd1SpvCA9XXcUnZS2FmJNp1coAFzvtCN9BmamE+4aHK8yyUHUSCcJHgXloTyT2A==" crossorigin="anonymous" referrerpolicy="no-referrer"/>
		{{ encore_entry_link_tags('app') }}
		{{ encore_entry_script_tags('app') }}
		{% block stylesheets %}{% endblock %}
	</head>
	<body>
		{% for label, messages in app.flashes %}
			<div class="container-alert">
				<div class="alert alert-{{label}}">
					{% for message in messages %}
						<p>{{message | raw}}
						</p>
					{% endfor %}
				</div>
			</div>
		{% endfor %}
		{% include "partials/header.html.twig" %}

		<div class="slide" id="slide-errors">
			<div class="grid-errors">
				<div class="items-errors">
					<h1>
						{% block error_name %}{% endblock %}
					</h1>
					<p>{% block error_text %}{% endblock %}
					<div>
						<a href="{{path('homepage')}}" class='btn3'>
							<i class="fa-solid fa-chevron-left"></i>
							Homepage</a>
						<a href="{{path('artworks_index')}}" class='btn1'>To the gallery
							<i class="fa-solid fa-chevron-right"></i>
						</a>
					</div>
				</div>
				<div class="items-errors square"></div>
				<div class="items-errors square"></div>
				<div class="items-errors square"></div>
				<div class="items-errors square"></div>
				<div class="items-errors square"></div>
				<div class="items-errors square"></div>
				<div class="items-errors square"></div>
				<div class="items-errors square"></div>
				<div class="items-errors square"></div>
				<div class="items-errors square"></div>
				<div class="items-errors square"></div>
				<div class="items-errors square"></div>
				<div class="items-errors square"></div>
				<div class="items-errors square"></div>
				<div class="items-errors square"></div>
				<div class="items-errors square"></div>
				<div class="items-errors square"></div>
				<div class="items-errors square"></div>
				<div class="items-errors square"></div>
				<div class="items-errors square"></div>
				<div class="items-errors square"></div>
				<div class="items-errors square"></div>
				<div class="items-errors square"></div>
				<div class="items-errors square"></div>
				<div class="items-errors square"></div>
			</div>
		</div>
		{% include "partials/footer.html.twig" %}
		{% block javascripts %}{% endblock %}
	</body>
</html>
