{% extends "base.html.twig" %}

{% block title %}
    My sales
{% endblock %}

{% block body %}
<div class="container">
<h1>Sales</h1>
    <div class="row">
        {% for sale in sales %}
        <div class="col-md-6 mb-4">
            <div class="card">
                <div class="card-body d-flex justify-content-between align-items-center">
                    <div>
                        <h5 class="card-title">{{ sale.user.fullName }}</h5>
                        <p class="card-text">{{ sale.amount }}</p>
                        <p class="card-text">{{ sale.artwork.title }}</p>
                    </div>
                    <div class="w-25">
                        <img class="img-fluid" src={{sale.artwork.coverImage}} alt={{sale.artwork.title}}>
                    </div>
                    <a href="{{ path('account_sales_show', {'slug': sale.artwork.slug}) }}" class="btn btn-primary">Voir plus</a>
                </div>
            </div>
        </div>
        {% endfor %}
    </div>
</div>
{% endblock %}
