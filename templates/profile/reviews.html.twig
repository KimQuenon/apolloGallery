{% extends 'base.html.twig' %}

{% block title %}Reviews de {{ user.fullName }}{% endblock %}

{% block body %}
    <div class="container">
        <h1>Reviews de {{ user.fullName }}</h1>
        {% if reviews is empty %}
            <p>Aucune review disponible.</p>
        {% else %}
            <ul>
                {% for review in reviews %}
                    <li>
                        <p>Note : {{ review.rating }}</p>
                        <p>{{ review.content }}</p>
                    </li>
                {% endfor %}
            </ul>
        {% endif %}
    </div>
{% endblock %}
