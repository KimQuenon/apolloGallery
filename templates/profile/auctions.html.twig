{% extends "base.html.twig" %}

{% block title %}
    My auctions
{% endblock %}

{% block body %}
<div class="container">
    <div class="row">
        {% if acceptedAuctions is not empty %}
            <p>Enchère remportée</p>
            {% for acceptedAuction in acceptedAuctions %}
                <div class="col-md-6 mb-4">
                    <div class="card">
                        <div class="card-body d-flex justify-content-between align-items-center">
                            <div>
                                <h5 class="card-title">{{ acceptedAuction.artwork.title }}</h5>
                                <p class="card-text">{{ acceptedAuction.amount }}</p>
                            </div>
                            <a href="{{ path('artworks_show', {'slug': acceptedAuction.artwork.slug}) }}" class="btn btn-primary">Voir plus</a>
                        </div>
                    </div>
                </div>
            {% endfor %}
            <hr>
        {% else %}
            <p>Aucune enchère remportée pour le moment</p>
        {% endif %}
        
        
        {% for auction in auctions %}
            <div class="col-md-6 mb-4">
                <div class="card">
                    <div class="card-body d-flex justify-content-between align-items-center">
                        <div>
                            <h5 class="card-title">{{ auction.artwork.title }}</h5>
                            <p class="card-text">{{ auction.amount }}</p>
                        </div>
                        <a href="{{ path('artworks_show', {'slug': auction.artwork.slug}) }}" class="btn btn-primary">Voir plus</a>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
</div>
{% endblock %}
