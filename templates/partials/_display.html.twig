	<div class="slide-show">
		<img src="{{artwork.coverImage}}" alt="cover of {{artwork.title}}">
		<div class="color-overlay"></div>
		<div class="content-show">
			<div>
				<a href="{{ path('homepage') }}">Home /</a>
				<a href="{{ path('artworks_index') }}">Our gallery /</a>
				<a href="{{ path('artworks_show', {'slug': artwork.slug}) }}" class="weight">{{artwork.title}}</a>
			</div>
			{% set isVertical = (artwork.canvaHeight > artwork.canvaWidth) %}
			{% set orientation_class = isVertical ? 'rotate-90' : '' %}
			<div class="container-show">
				<div class="img-show">
					<img src="{{artwork.coverImage}}" alt="cover of {{artwork.title}}" class="{{ orientation_class }}">
					<div class="frame-overlay {{ orientation_class }}"></div>
				</div>
				<div class="info-show">
					<div class="title-show">
						<h2>{{artwork.title}}</h2>
						<div class="icons-content">
							{% if app.user == artwork.author or is_granted('ROLE_ADMIN') %}
								<a href="{{ path('artworks_edit', {'slug': artwork.slug}) }}" class="icon icon-edit"><i class="fa-solid fa-pen"></i></a>
								<a href="{{ path('artworks_delete', {'slug': artwork.slug}) }}" class="icon icon-delete"><i class="fa-solid fa-trash-can"></i></a>
							{% endif %}
						</div>
					</div>
					<p class="weight">{{artwork.fullName}}</p>
					<div class="container-info">
						<div class="item-info">
							<p class="item weight">Year :</p>
							<p class="item">{{artwork.year}}</p>
						</div>
						<div class="item-info">
							<p class="item weight">Year :</p>
							<p class="item">{{artwork.year}}</p>
						</div>
						<div class="item-info">
							<p class="item weight">Year :</p>
							<p class="item">{{artwork.year}}</p>
						</div>
						<div class="item-info">
							<p class="item weight">Year :</p>
							<p class="item">{{artwork.year}}</p>
						</div>
						<div class="item-info">
							<div><p class="weight">Description : </p>{{artwork.content | raw }}</div>						
						</div>
                    {% if context == 'artworks_show' %}
                        <div class="item-price">
                            <p class="weight">Price :</p>
                            <div class="price">€ {{ artwork.priceInit | number_format(2, ',', '.') }}</div>
                        </div>
                    {% elseif context == 'account_sales_show' %}
                        <div class="item-price">
                            <p class="weight">Highest Bid :</p>
                            {# <div class="price">€ {{ artwork.highestBid | number_format(2, ',', '.') }}</div> #}
                        </div>
                    {% endif %}
					</div>
				</div>
			</div>
		</div>
	</div>