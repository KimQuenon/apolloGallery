{% extends 'admin/base.html.twig' %}

{% block title %}Administration des annonces{% endblock %}

{% block body %}
    <div class="container-fluid full">
        <h1 class="my-5">Gestion des annonces</h1>
                <table class="table table-hover">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Titre</th>
                    <th>Auteur</th>
                    <th class="text-center">Action</th>
                </tr>
            </thead>
            <tbody>
                {% for artwork in pagination.data %}
                    <tr>
                        <td>{{artwork.id}}</td>
                        <td>{{artwork.title}}</td>
                        <td>{{artwork.author.fullName}}</td>
                        <td class="text-center">
                            <a href="{{path("admin_artworks_edit",{"slug":artwork.slug})}}" class="btn btn-warning"><i class="fas fa-edit"></i></a>
                            <a href="{{path("admin_artworks_delete",{"slug":artwork.slug})}}" class="btn btn-danger"><i class="fas fa-trash"></i></a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
        {{pagination.display()}}
    </div>
{% endblock %}