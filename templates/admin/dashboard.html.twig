{% extends 'admin/base.html.twig' %}

{% block title %}Dashboard{% endblock %}

{% block body %}
    <div class="container full">
        <div class="row mt-5">
            <div class="col">
                <a href="{{ path('admin_artworks_index') }}">
                <div class="card bg-dark text-white mb-3 text-center">
                    <div class="card-body">
                        <div class="row my-2">
                            <div class="col-4">
                                <i class="fas fa-palette fa-2x"></i>
                            </div>
                            <div class="col-8">
                                <div class="card-title">{{artworks | length}} artworks</div>
                            </div>
                        </div>
                    </div>
                </div>
                </a>
            </div>
            <div class="col">
            <a href="{{ path('admin_users_index') }}">
                <div class="card bg-warning text-white mb-3 text-center">
                    <div class="card-body">
                        <div class="row my-2">
                            <div class="col-4">
                                <i class="fas fa-users fa-2x"></i>
                            </div>
                            <div class="col-8">
                                <div class="card-title">{{users | length}} users</div>
                            </div>
                        </div>
                    </div>
                </div>
            </a>
            </div>
            <div class="col">
            <a href="{{ path('admin_contacts_index') }}">
                <div class="card bg-primary text-white mb-3 text-center">
                    <div class="card-body">
                        <div class="row my-2">
                            <div class="col-4">
                                <i class="fas fa-envelope fa-2x"></i>
                            </div>
                            <div class="col-8">
                                <div class="card-title">{{contacts | length}} messages</div>
                            </div>
                        </div>
                    </div>
                </div>
            </a>
            </div>
        </div>
    </div>
{% endblock %}