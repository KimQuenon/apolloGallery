{% extends 'admin/base.html.twig' %}

{% block title %}Administration des users{% endblock %}

{% block body %}
    <div class="container-fluid full">
        <h1 class="my-5">Gestion des profils</h1>
                <table class="table table-hover">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Nom</th>
                    <th>Surname</th>
                    <th>Description</th>
                    <th>Artworks</th>
                    <th class="text-center">Action</th>
                </tr>
            </thead>
            <tbody>
                {% for user in pagination.data %}
                    <tr>
                        <td>{{user.id}}</td>
                        <td>{{user.firstName}}</td>
                        <td>{{user.lastName}}</td>
                        <td>{{user.description | raw | striptags | slice(0, 50)}}</td>
                        <td class="text-center">
                            <span class="badge bg-primary rounded">{{user.artworks | length}}</span>
                        </td>
                        <td class="text-center">
                            {# <a href="{{path("admin_users_edit",{"id":user.id})}}" class="btn btn-warning"><i class="fas fa-edit"></i></a> #}
                            <a href="{{path("admin_users_delete",{"id":user.id})}}" class="btn btn-danger"><i class="fas fa-trash"></i></a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
        {{pagination.display()}}
    </div>
{% endblock %}