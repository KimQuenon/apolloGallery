{% extends 'base.html.twig' %}

{% block title %}About{% endblock %}

{% block body %}
    <div class="container">
        <h1>Liste des experts</h1>
        <ul>
            {% for expert in experts %}
                {% if 'ROLE_EXPERT' in expert.roles %}
                    <li>{{ expert.fullName }}</li>
                    {% if app.user is not null and 'ROLE_USER' in app.user.roles %}
                        <form action="{{ path('create_conversation_with_expert', {'expertSlug': expert.slug}) }}" method="post">
                            <button type="submit" class="btn btn-primary rounded-pill">
                                <i class="fa fa-envelope"></i> Envoyer un message
                            </button>
                        </form>
                    {% endif %}
                {% endif %}
            {% endfor %}
        </ul>
    </div>
{% endblock %}
